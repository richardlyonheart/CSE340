<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page" id="page-title">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (user && user.isLoggedIn) { %>
            <!-- Show Logout Link if User is Logged In -->
            <a title="Click to log out" href="/logout">Logout</a>
        <% } else { %>
            <!-- Show My Account Link if User is Not Logged In -->
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>